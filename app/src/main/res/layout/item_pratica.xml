<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"

    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    app:cardCornerRadius="0dp">  <!-- Borda arredondada ou não -->

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/pratica_ilustrativa"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"

            android:layout_marginTop="16dp"

            android:layout_gravity="center"

            android:src="@null"
            android:contentDescription="Colocar descrição no código futuramente para deficientes visuais" />

        <TextView
            android:id="@+id/nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pratica_ilustrativa"
            android:paddingStart="16dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/PrimaryText"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nome"
            android:layout_marginBottom="5dp"
            android:layout_alignBottom="@+id/nome"
            android:paddingStart="16dp"
            android:textColor="@color/SecondText"
            android:textSize="12sp"
            android:layout_marginTop="6dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>


